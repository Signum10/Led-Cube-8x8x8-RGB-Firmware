////////////////////////////////////////////////// LC-8x8x8-RGB-01 (Led Cube Slave)
.equ D01_F_CPU          = 16000000
.equ D01_CUBE_EDGE_SIZE = 8
.equ D01_LED_COLORS     = 3 ; How many colors per LED
.equ D01_LED_COLOR_BITS = 4 ; How many bits per color
.equ D01_FRAME_SIZE     = ((D01_CUBE_EDGE_SIZE * D01_CUBE_EDGE_SIZE * D01_CUBE_EDGE_SIZE) * (D01_LED_COLORS * D01_LED_COLOR_BITS)) / 8

.equ D01_TEST_SET       = 0
.equ D01_TEST_GET       = 1
.equ D01_TEST_SET_INT   = 2
.equ D01_TEST_SET_SR    = 3
.equ D01_TEST_GET_SR    = 4
.equ D01_TEST_SET_LEDS  = 5

.equ D01_TEST_SET_DATA_SIZE             = D01_FRAME_SIZE

.equ D01_TEST_GET_DATA_SIZE             = D01_FRAME_SIZE

.equ D01_TEST_SET_INT_STATE_SIZE        = 1
.equ D01_TEST_SET_INT_STATE_OFFSET      = 0
.equ D01_TEST_SET_INT_DATA_SIZE         = D01_TEST_SET_INT_STATE_SIZE + D01_TEST_SET_INT_STATE_OFFSET

.equ D01_TEST_SET_SR_MODE_SIZE          = 1
.equ D01_TEST_SET_SR_MODE_OFFSET        = 0
.equ D01_TEST_SET_SR_PRESCALAR_SIZE     = 2
.equ D01_TEST_SET_SR_PRESCALAR_OFFSET   = D01_TEST_SET_SR_MODE_SIZE + D01_TEST_SET_SR_MODE_OFFSET
.equ D01_TEST_SET_SR_BYTE_SIZE          = 1
.equ D01_TEST_SET_SR_BYTE_OFFSET        = D01_TEST_SET_SR_PRESCALAR_SIZE + D01_TEST_SET_SR_PRESCALAR_OFFSET
.equ D01_TEST_SET_SR_COUNT_SIZE         = 3
.equ D01_TEST_SET_SR_COUNT_OFFSET       = D01_TEST_SET_SR_BYTE_SIZE + D01_TEST_SET_SR_BYTE_OFFSET
.equ D01_TEST_SET_SR_DATA_SIZE          = D01_TEST_SET_SR_COUNT_SIZE + D01_TEST_SET_SR_COUNT_OFFSET
.equ D01_TEST_SET_SR_MODE_MANUAL        = 0
.equ D01_TEST_SET_SR_MODE_AUTO          = 1

.equ D01_TEST_GET_SR_ERROR_COUNT_SIZE   = D01_TEST_SET_SR_COUNT_SIZE
.equ D01_TEST_GET_SR_ERROR_COUNT_OFFSET = 0
.equ D01_TEST_GET_SR_DATA_SIZE          = D01_TEST_GET_SR_ERROR_COUNT_SIZE + D01_TEST_GET_SR_ERROR_COUNT_OFFSET

.equ D01_TEST_SET_LEDS_START_LED_SIZE   = 1
.equ D01_TEST_SET_LEDS_START_LED_OFFSET = 0
.equ D01_TEST_SET_LEDS_END_LED_SIZE     = 1
.equ D01_TEST_SET_LEDS_END_LED_OFFSET   = D01_TEST_SET_LEDS_START_LED_SIZE + D01_TEST_SET_LEDS_START_LED_OFFSET
.equ D01_TEST_SET_LEDS_COLOR_SIZE       = 1
.equ D01_TEST_SET_LEDS_COLOR_OFFSET     = D01_TEST_SET_LEDS_END_LED_SIZE + D01_TEST_SET_LEDS_END_LED_OFFSET
.equ D01_TEST_SET_LEDS_LEVEL_SIZE       = 1
.equ D01_TEST_SET_LEDS_LEVEL_OFFSET     = D01_TEST_SET_LEDS_COLOR_SIZE + D01_TEST_SET_LEDS_COLOR_OFFSET
.equ D01_TEST_SET_LEDS_DATA_SIZE        = D01_TEST_SET_LEDS_LEVEL_SIZE + D01_TEST_SET_LEDS_LEVEL_OFFSET
.equ D01_TEST_SET_LEDS_COLOR_NONE       = 0b00000000
.equ D01_TEST_SET_LEDS_COLOR_RED        = 0b00000001
.equ D01_TEST_SET_LEDS_COLOR_GREEN      = 0b00000010
.equ D01_TEST_SET_LEDS_COLOR_YELLOW     = 0b00000011
.equ D01_TEST_SET_LEDS_COLOR_BLUE       = 0b00000100
.equ D01_TEST_SET_LEDS_COLOR_MAGENTA    = 0b00000101
